{
  "name": "platform-cookie-extractor",
  "version": "1.0.0",
  "description": "A MacOS Electron app to extract cookies from social platforms",
  "main": "src/main/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite --port 5180 --strictPort false",
    "dev:electron": "wait-on http://localhost:5180 -t 30000 && electron .",
    "build": "vite build",
    "build:mac": "electron-builder --mac",
    "preview": "vite preview"
  },
  "keywords": [
    "electron",
    "cookie-extractor",
    "playwright",
    "social-media"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "electron-store": "^8.1.0",
    "playwright": "^1.40.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^39.2.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.6",
    "vite": "^7.2.2",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.platformcookieextractor.app",
    "productName": "Platform Cookie Extractor",
    "directories": {
      "output": "dist-electron"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "files": [
      "dist/**/*",
      "src/main/**/*",
      "package.json"
    ]
  }
}
